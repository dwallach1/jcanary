{
    "rules": [
        {
            "name": "Can get my checkins",
            "steps": [
                {
                    "name": "make request",
                    "action": "webrequest",
                    "connection": {
                        "url": "${baseurl}/checkins?userId=${userId}",
                        "method": "get",
                        "queryparams": [],
                        "headers": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ]
                    }
                },
                {
                    "name": "verify we have an array of checkins",
                    "action": "equals",
                    "stepRef": 0,  
                    "leftOperand": {
                        "type": "reference",
                        "val": "statusCode"
                    },
                    "rightOperand": {
                        "type": "constant",
                        "val": 200
                    }
                }
            ]
        }
    ],
    "vars": {
        "baseurl": {
            "type": "constant",
            "value": "https://blendapi-production.up.railway.app/blend/v1"
        },
        "userId": {
            "type": "constant",
            "value": "USR_rE2KRTORaL1QHOH"
        },
        "someEnvVar": {
            "type": "env",
            "value": "MY_ENV_VAR"
        }
    }
}